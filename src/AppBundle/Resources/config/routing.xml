<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="homepage" path="/">
        <default key="_controller">AppBundle:Default:index</default>
    </route>

    <import
        resource="@AppBundle/Resources/config/routing/menu_demo.xml"
        prefix="/menu" />

    <import
        resource="@AppBundle/Resources/config/routing/ajax_blocks_demo.xml"
        prefix="/ajax-blocks" />

    <import
        resource="@AppBundle/Resources/config/routing/ajax_modals_demo.xml"
        prefix="/ajax-modals" />

</routes>
